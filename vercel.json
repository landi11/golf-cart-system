{
  "version": 2,
  "builds": [
    {
      "src": "backend/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/app.py"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot|json))",
      "dest": "/frontend/$1"
    },
    {
      "src": "/(index|admin|login|quote|quote-preview|reset-data)\\.html",
      "dest": "/frontend/$0"
    },
    {
      "src": "/(index|admin|login|quote|quote-preview|reset-data)",
      "dest": "/frontend/$1.html"
    },
    {
      "src": "/",
      "dest": "/frontend/index.html"
    }
  ]
}
